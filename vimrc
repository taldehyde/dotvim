execute pathogen#infect()
syntax on
filetype plugin indent on

set expandtab
set textwidth=79
set tabstop=8
set softtabstop=4
set shiftwidth=4
set smartindent
set autoindent
set hlsearch
set ignorecase
colorscheme torte

autocmd Filetype ruby setlocal ts=2 sts=2 sw=2
autocmd FileType make set noexpandtab shiftwidth=8 softtabstop=0
